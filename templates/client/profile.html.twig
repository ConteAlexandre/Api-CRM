{% extends 'base.html.twig' %}

{% block title %}Update client{% endblock title %}

{% block body %}
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
        <h2 class="display-4 py-2">Modification des infos du client</h2>
         <div class="px-2">
                {{ form_start(form) }}
                {{ form_label(form.firstName, 'Prenom') }}
                {{ form_errors(form.firstName) }}
                {{ form_widget(form.firstName) }}
                {{ form_label(form.lastName, 'Nom') }}
                {{ form_errors(form.lastName) }}
                {{ form_widget(form.lastName) }}
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
        <div class=" col-lg-8 mx-auto text-center">
        {{ form_label(form.birthday, 'Date de Naissance') }}
        {{ form_errors(form.birthday) }}
        {{ form_widget(form.birthday) }}
        </div>
        <div class="form-group" style="display: flex; margin-top: 10px">
        <div style="width: 33%">
        {{ form_label(form.numberPhone.country, 'Pays') }}
        {{ form_errors(form.numberPhone.country) }}
        {{ form_widget(form.numberPhone.country) }}
        </div>
            <div>
                {{ form_label(form.numberPhone.number, 'Numéro de téléphone') }}
                {{ form_errors(form.numberPhone.number) }}
                {{ form_widget(form.numberPhone.number) }}
            </div>
        </div>
        <input type="submit" value="Modification" class="btn btn-primary" style="margin-top: 5px">
        </div>
         </div>
    {{ form_end(form) }}
{% endblock body %}