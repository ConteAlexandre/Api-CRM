{% extends 'base.html.twig' %}
{% block title %}List Clients{% endblock title %}

{% block body %}
    <table id="tableClients" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Email</th>
            <th scope="col">Activit√©</th>
            <th scope="col">Date d'ajout</th>
            <th scope="col">Modifier</th>
            <th scope="col">Profil</th>
        </tr>
        </thead>
        {% for client in clients %}
            <tbody>
            <tr>
                <td>{{ client.firstName }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.clientActivity }}</td>
                <td>{{ client.createdAt.format("d m Y") }}</td>
                <td><a href="{{ path('update_client', {'slug': client.slug }) }}">Modifier</a></td>
                <td><a href="{{ path('profileClient', {'slug': client.slug}) }}">Profil</a></td>
            </tr>
            </tbody>
        {% endfor %}
    </table>
    <h4><a href="{{ path('createClient') }}">Create Client</a></h4>
{% endblock body %}
