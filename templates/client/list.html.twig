{% extends 'base.html.twig' %}

{% block title %}List Clients{% endblock title %}

{% block body %}
    <table id="tableClients" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Email</th>
            <th scope="col">Activity</th>
            <th scope="col">Prospect</th>
        </tr>
        </thead>
        {% for client in clients %}
            <tbody>
            <tr>
                <td><a href="{{ path('update_client', {'slug': client.slug }) }}">{{ client.firstName }}</a></td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.clientActivity }}</td>
                <td>{{ client.isProspect }}</td>
            </tr>
            </tbody>
        {% endfor %}
    </table>
{% endblock body %}
